body {
  padding: 0;
  margin: 0;
  background-image: url(<%= asset_path("turing.png") %>);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
  background-color: black;
  overflow: hidden;
  font-family: sans-serif;
}

.app-body {
  padding: 20px;
  margin: 0;
  background-color: rgba(0, 0, 0, .5);
  color: white;
  z-index: 2;
  position: fixed;
  top: 0;
  width: 100%;
}

.app-body a {
  color: white;
}

#main-billboard {
  padding: 0;
  margin: 0;
  width: vw;
}

.billboard-title {
  padding: 20px;
  margin: 0;
  height: 40px;
  width: 100%;
  position: fixed;
  bottom: 80px;
  z-index: 2;
  background-color: #05C2D1;
  color: white;
  font-size: 2em;
}

.billboard-message {
  padding: 20px;
  margin: 0;
  height: 40px;
  width: 100%;
  position: fixed;
  bottom: 0px;
  z-index: 1;
  background-color: rgba(0, 0, 0, .5);
  color: white;
  font-size: 1.5em;
  float: left;
}

.billboard-image {
  position: relative;
  min-width: 100%;
  min-height: 100%;
  max-width: 110%;
}

.success {
  padding: 20px;
  background-color: #019833;
  color: white;
}

.success a {
  color: white;
}
